<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/primaryAccent</item>
    </style>

    <!-- Default ActionBar Style -->
    <style name="ActionBarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
    
    <!-- Default TypefaceTextView Style -->
    <style name="TypefaceTextViewStyle" parent="android:Widget.Holo.TextView">
        <item name="typeface">OpenSans-Regular</item>
    </style>

</resources>
